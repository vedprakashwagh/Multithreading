<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/display_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/mainTemperatureDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Outside Temperature: --°C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 1: --°C"
            android:tag="display1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 2: --°C"
            android:tag="display2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 3: --°C"
            android:tag="display3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 4: --°C"
            android:tag="display4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 5: --°C"
            android:tag="display5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Teller 6: --°C"
            android:tag="display6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/display7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:tag="display7"
            android:text="Teller 7: --°C"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>